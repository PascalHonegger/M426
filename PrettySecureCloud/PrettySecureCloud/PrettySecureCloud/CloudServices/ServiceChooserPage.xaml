<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrettySecureCloud.CloudServices.ServiceChooserPage">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Hinzufügen" Icon="add.png" Order="Primary"
						Command="{Binding AddCommand}" />
	</ContentPage.ToolbarItems>

	<StackLayout>
		<SearchBar Placeholder="Dienst suchen" Text="{Binding SearchText}"/>
		<ListView ItemsSource="{Binding CloudServices}" SelectedItem="{Binding SelectedCloudService}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextCell Text="{Binding Name}" />
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
</ContentPage>
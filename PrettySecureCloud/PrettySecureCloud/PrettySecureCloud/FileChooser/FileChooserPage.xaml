<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrettySecureCloud.CloudServices.Files.FileChooserPage">

	<StackLayout Orientation="Vertical" Spacing="0" VerticalOptions="FillAndExpand" Padding="20, 10, 20, 20">
		<ListView x:Name="MainListView" ItemsSource="{Binding FilledListView}" HasUnevenRows="True"
		          SelectedItem="{Binding SelectedFile}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<TextCell Text="{Binding FileName}" />
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
</ContentPage>
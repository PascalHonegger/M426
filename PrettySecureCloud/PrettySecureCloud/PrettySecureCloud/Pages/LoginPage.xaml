<?xml version="1.0" encoding="UTF-8"?>

<infrastructure:CustomPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                           xmlns:infrastructure="clr-namespace:PrettySecureCloud.Infrastructure;assembly=PrettySecureCloud"
                           xmlns:theme="clr-namespace:PrettySecureCloud.Theme;assembly=PrettySecureCloud"
                           x:Class="PrettySecureCloud.Pages.LoginPage">
	<StackLayout Spacing="20" Padding="20" VerticalOptions="Center" >
		<Image Source="prettySecureCloudIcon.png" Aspect="AspectFit" />
		<Label Text="Pretty Secure Cloud" VerticalTextAlignment="Center" />
		<Entry Placeholder="Benutzername/E-Mail" Text="{Binding Username}" Completed="OnComplete" />
		<Entry Placeholder="Passwort" Text="{Binding Password}" IsPassword="true"
		       Completed="OnComplete" />
		<Button Text="Anmelden" TextColor="White" BackgroundColor="{x:Static theme:Colors.LogoBlue}" Command="{Binding LoginCommand}" />
		<Button Text="Registrieren" TextColor="Blue" BackgroundColor="Transparent" Command="{Binding RegisterCommand}" />
	</StackLayout>
</infrastructure:CustomPage>
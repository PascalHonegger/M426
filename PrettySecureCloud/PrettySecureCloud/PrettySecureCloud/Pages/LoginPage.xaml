<?xml version="1.0" encoding="UTF-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrettySecureCloud.Pages.LoginPage">
	<StackLayout Spacing="20" Padding="20" VerticalOptions="Center">
		<Image Source="prettySecureCloudIcon.png" x:Name="Bild" Aspect="AspectFit" />
		<Label Text="Pretty Secure Cloud" VerticalTextAlignment="Center" />
		<Entry x:Name="UsernameEntry" Placeholder="Benutzername/E-Mail" Text="{Binding Username}" Completed="OnComplete" />
		<Entry x:Name="PasswordEntry" Placeholder="Passwort" Text="{Binding Password}" IsPassword="true"
		       Completed="OnComplete" />
		<Button x:Name="Login" Text="Anmelden" TextColor="White" BackgroundColor="Transparent" Clicked="OnLoginClicked"
		        IsEnabled="false" />
		<Button Text="Registrieren" TextColor="Blue" BackgroundColor="Transparent" Clicked="OnRegistrationClicked" />
	</StackLayout>
</ContentPage>